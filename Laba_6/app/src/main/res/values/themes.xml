<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Laba_6" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MyStyle" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/purple_200</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="GreenText" parent="@style/TextAppearance.AppCompat">
        <item name="android:textColor">#38FF00</item>
    </style>

    <style name="MyStyle.Red" parent="@style/TextAppearance.AppCompat">
        <item name="android:textColor">#FF0000</item>
    </style>

    <style name="MyStyle.Red.Big" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="Numbers">
        <item name="android:inputType">number</item>
    </style>

    <style name="CustomTheme" parent="android:Theme.Light">
        <item name="android:windowBackground">#C3C3C3</item>
        <item name="android:colorBackground">@color/purple_200</item>
    </style>

    <style name="RedThemeOverlay" parent="android:ThemeOverlay.Material">
        <item name="android:colorEdgeEffect">#C3C3C3</item>
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:colorEdgeEffect">#C3C3C3</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:colorPrimary">@color/purple_200</item>
        <item name="android:colorPrimaryDark">@color/purple_200</item>
        <item name="android:colorAccent">@color/purple_200</item>
        <item name="android:alertDialogTheme">@style/AlertDialogCustom</item>
    </style>

    <style name="DestructiveButton" parent="android:Widget.DeviceDefault.Button.Borderless">
        <item name="android:colorEdgeEffect">#FF0000</item>
    </style>

    <style name="AlertDialogCustom.Destructive" >
        <item name="android:buttonBarPositiveButtonStyle">@style/DestructiveButton</item>
    </style>

    <style name="ThemeOverlay.AccentSecondary" parent="ThemeOverlay.AppCompat">
        <item name="android:colorAccent">#5EFFF2</item>
    </style>

</resources>